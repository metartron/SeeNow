@model SeeNow.Models.manager

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Main CSS-->
    <link href="~/Content/main.css" rel="stylesheet" />
    <!-- Font-icon css-->
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    
    <title>Login</title>
</head>
<body>

    <section class="material-half-bg">
        <div class="cover"></div>
    </section>
    <section class="login-content">
        <div class="logo">
            <h1>SeeNow</h1>
        </div>
        <div class="login-box">
            <form class="login-form"  method="post" action='/Home/Login?ReturnUrl=@Request.QueryString["ReturnUrl"]' name = "LoginForm">
                <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>SIGN IN</h3>
                <div class="form-group">
                    <label class="control-label">管理者帳號</label>
                    <input name="Account" required="required" id="Account" class="form-control" type="text" autofocus> @*placeholder="Email"*@
                    <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="Account"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">密碼</label>
                    <input name="PD" autocomplete="new-password" required="required" id="PD" class="form-control" type="password" placeholder="Password">
                    <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="PD"></span>
                </div>
                <div class="form-group">
                    <div class="utility">
                        <div class="animated-checkbox">
                            <label>
                                <input type="checkbox"><span class="label-text">保持登入</span>
                            </label>
                        </div>
                        @*<p class="semibold-text mb-2"><a href="#" data-toggle="flip">忘記密碼</a></p>*@
                    </div>
                </div>
                <div class="form-group btn-container">
                    <button class="btn btn-primary btn-block" type="submit"><i class="fa fa-sign-in fa-lg fa-fw"></i>登入</button>
                </div>
            </form>
            <form class="forget-form" >
                <h3 class="login-head"><i class="fa fa-lg fa-fw fa-lock"></i>Forgot Password ?</h3>
                <div class="form-group">
                    <label class="control-label">EMAIL</label>
                    <input class="form-control" type="text" placeholder="Email">
                </div>
                <div class="form-group btn-container">
                    <button class="btn btn-primary btn-block"><i class="fa fa-unlock fa-lg fa-fw"></i>RESET</button>
                </div>
                <div class="form-group mt-3">
                    <p class="semibold-text mb-0"><a href="#" data-toggle="flip"><i class="fa fa-angle-left fa-fw"></i> Back to Login</a></p>
                </div>
            </form>
        </div>
    </section>
    <!-- Essential javascripts for application to work-->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!-- The javascript plugin to display page loading on top-->
    <script src="~/Scripts/pace.min.js"></script>
   
    <script type="text/javascript">
        // Login Page Flipbox control
        $('.login-content [data-toggle="flip"]').click(function () {
            $('.login-box').toggleClass('flipped');
            return false;
        });
    </script>

    
</body>
</html>

